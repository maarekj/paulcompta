.chargesListView(ng-controller="sales.salesListViewCtrl")
    .row
        .span12
            #toolbar
                h1 Chiffres d'affaires
                .btn-group
                    a.btn(href="#/sales/edit")
                        i.icon-edit
                        span  Modifier
            table.table.table-condensed.sales
                thead
                    tr
                        th.week Semaine
                        th Lundi
                        th Mardi
                        th Mercredi
                        th Jeudi
                        th Vendredi
                        th Samedi
                        th Dimanche
                        th.total Total
                        th Chèques
                        th Espèces
                        th Tickets Resto
                tbody
                    tr(ng-repeat="week in weeks")
                        td.week {{week.week|date}}
                        td.currency(ng-repeat="day in [0, 1, 2, 3, 4, 5, 6]", toggle-view)
                            .primary {{week.sales[day]|nullToUndefined|currency}}
                            input.input-mini.secondary(type="number", ng-model="week.sales[day]")
                        td.currency.total {{total(week)|currency}}
                        td.currency(ng-repeat="mode in ['cheque', 'cash', 'ticket']", toggle-view)
                            .primary {{week.modalities[mode]|currency}}
                            input.input-mini.secondary(type="number", ng-model="week.modalities[mode]")
                tfoot
                    tr
                        th.week Semaine
                        th Lundi
                        th Mardi
                        th Mercredi
                        th Jeudi
                        th Vendredi
                        th Samedi
                        th Dimanche
                        th.total Total
                        th Chèques
                        th Espèces
                        th Tickets Resto
                    tr
                        th Médiane
                        th(ng-repeat="day in [0, 1, 2, 3, 4, 5, 6]")
                            {{median(day)|currency}}
                        th.total.currency {{totalAll|currency}}
                    tr
                        th Moyenne
                        th(ng-repeat="day in [0, 1, 2, 3, 4, 5, 6]")
                            {{mean(day)|currency}}
                        th.total.currency {{totalAll|currency}}

                    
                    